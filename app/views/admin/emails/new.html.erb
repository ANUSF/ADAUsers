<%= semantic_form_for [:admin, @email], :url => admin_email_path do |form| %>
  <%= form.inputs do %>
    <%= hidden_field_tag 'redirect_to', @redirect_to %>
    <%= form.input :from %>
    <%= form.input :to %>
    <%= form.input :subject %>
    <%= form.input :body, :as => :text %>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button 'Send' %>
  <% end %>
<% end %>

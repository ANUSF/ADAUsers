<%= semantic_form_for [:admin, @email], :url => admin_email_path do |form| %>
  <%= form.inputs do %>
    <li>From: <%= form.object.from %></li>
    <li>To: <%= form.object.to %></li>
    <%= form.input :subject %>
    <%= form.input :body, :as => :text %>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button 'Send' %>
  <% end %>
<% end %>

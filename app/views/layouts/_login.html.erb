<% if current_user %>
  <div class='logged_in'>
    <span><%= "#{current_user.role_cms}|#{current_user.user_role}:" %></span>
    <%= current_user.email %>
  </div>
  <div class='formtastic'>
    <%= link_to "Log out", session_path, :method => :delete,
                           :id => 'logout_button' %>
    <%= link_to "View Profile", user_path(current_user),
                           :id => 'profile_button' %>
  </div>
<% else %>
  <h1>USER Log-in</h1>
  <div class='formtastic'>
    <%= link_to "LOG IN", new_session_path, :id => 'enter_button' %>
    <%= link_to "Register", new_user_path, :id => 'register_button' %>
  </div>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>ADA Users</title>
    <%= stylesheet_link_tag 'formtastic', 'application' %>
    <%= javascript_include_tag 'jquery', 'rails', 'application' %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="header">
      <div id="account">
        <% if current_user %>
          <%= "Logged in as #{current_user.user}." %>
          <%= link_to "Log out", session_path, :method => :delete %>
        <% else %>
          <%= link_to "Register", new_user_path %>
          <%= link_to "Log in", new_session_path %>
        <% end %>
      </div>

      <div id="title">ADA Users</div>
      <div id="subtitle"><%= yield :title %></div>

      <div id="links">
	<%= link_to "My details", user_path(current_user) if current_user %>
        <%= link_to "Manage users", users_path if current_user and current_user.admin? %>
      </div>
    </div>
   
   <% flash.each do |name, msg| %>
      <div id='flash_<%=name%>'><%=h(msg).gsub(/\n/, '<br/>')%></div>
    <% end %>

    <div id='main'>
      <%= yield %>
    </div>

 </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>OpenidDemo</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag 'rails' %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <% flash.each do |name, msg| %>
    <div id='flash_<%=name%>'><%=h(msg).gsub(/\n/, '<br/>')%></div>
    <% end %>

    <div id='main'>
      <%= yield %>
    </div>

 </body>
</html>

<h3>Sign In</h3>

<%= form_tag sessions_url do %>
  <ul>
    <li>
      <%= label_tag :username, "Username:" %>
      <% if @username.nil? %>
        <%= text_field_tag :username %>
      <% else %>
        <%= @username %>
      <% end %>
    </li>
    <li>
      <%= label_tag :password, "Password:" %>
      <%= password_field_tag :password %>
    </li>
    <li>
      <%= submit_tag "Login" %>
      <%= submit_tag "Cancel" %>
    </li>
  </ul>
<% end %>
